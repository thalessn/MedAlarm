<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gmail.thales_silva_nascimento.alarmmed">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <provider
            android:authorities="${applicationId}.provider"
            android:name="android.support.v4.content.FileProvider"
            android:exported="false"
            android:grantUriPermissions="true">

            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />

        </provider>


        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.activity_medicoCadastro"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.activity_medicoDetalhe"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.CriaPerfl"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.editaPerfil"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.receitaCadastro"
            android:screenOrientation="portrait" />
        <activity android:name=".TelaAlarme" />
        <activity
            android:name=".activity.MedicamentoCadastro"
            android:screenOrientation="portrait">

            <!--
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            -->
        </activity>

        <!-- Declara o service do Alarme -->
        <service android:name=".AlarmeService" />
        <!-- Declara o service do Lebrete -->
        <service android:name=".LembreteCompraService" />

        <!-- Declara que a classe AlarmeReceiver é o tipo de receiver -->
        <receiver android:name=".AlarmeReceiver" />
        <!-- Declara que a classe AlarmeReceiver é o tipo de receiver -->
        <receiver android:name=".LembreteCompraReceiver" />

        <activity
            android:name=".activity.MedicamentoDetalhe"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.LembreteCompraRemedio"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.adicionarDose"
            android:label="@string/title_activity_adicionar_dose"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity android:name=".activity.InfoMedAlarmes" />
        <activity
            android:name=".activity.activityFloatingbuttonTelaInicial"
            android:label="@string/title_activity_excluir_teste_flotingbutton"
            android:theme="@style/Theme.AppCompat.Transparent.NoActionBar" />
        <activity android:name=".activity.Historico" />
        <activity android:name=".activity.Email"></activity>
    </application>

</manifest>