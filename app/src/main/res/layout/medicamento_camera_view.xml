<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llMedTest2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="20dp"
    android:gravity="center"
    android:orientation="horizontal"
    app:layout_scrollFlags="scroll|exitUntilCollapsed">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btnCancelCam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:elevation="30dp"
            android:src="@drawable/ic_clear"
            app:fabSize="mini" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnCancelCam"
            android:layout_centerHorizontal="true"
            android:text="Cancelar"
            android:textSize="18sp" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frameLayoutCamera"
        android:layout_width="wrap_content"
        android:layout_height="170dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgMedCam"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/circle_transparent"
            app:civ_border_color="@color/cardview_light_background"
            app:civ_border_width="2dp" />
    </FrameLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btnCapturarCam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_menu_camera"
            app:fabSize="mini" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnCapturarCam"
            android:layout_centerHorizontal="true"
            android:text="Capturar"
            android:textSize="18sp" />

    </RelativeLayout>


</LinearLayout>