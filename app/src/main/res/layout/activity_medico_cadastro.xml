<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_medico_cadastro"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.gmail.thales_silva_nascimento.alarmmed.activity.activity_medicoCadastro">

    <!-- Adiciona a toolbar do médico -->
    <include
        android:id="@+id/tBMedCad"
        layout="@layout/app_bar_medicocadastro"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tBMedCad"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/medicoImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:padding="4.5dp"
                    android:src="@drawable/ic_medico" />

                <LinearLayout
                    android:id="@+id/LLmedicoCadastro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/inputLayoutNome"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_weight="0.85">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/medicoNome"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:hint="Nome do Médico"
                            android:inputType="textPersonName"
                            android:textSize="20sp">

                        </android.support.design.widget.TextInputEditText>


                    </android.support.design.widget.TextInputLayout>

                    <ImageView
                        android:id="@+id/imContato"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.1"
                        android:src="@drawable/ic_contato" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/LL1medicoCadastro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/medicoEspSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="80dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="#ff0000"></Spinner>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LL2medicoCadastro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/medicoTelImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_telefone" />

                <EditText
                    android:id="@+id/medicoTelefone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:hint="Telefone"
                    android:layout_marginLeft="24dp"
                    android:inputType="phone" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LL3medicoCadastro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/medicoEndImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_endereco" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputLayoutEndereco"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="24dp">

                    <EditText
                        android:id="@+id/medicoEndereco"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:hint="Endereço"
                        android:inputType="textPostalAddress|textMultiLine"
                        android:minLines="1"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/LL4medicoCadastro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

                <ImageView
                    android:id="@+id/medicoObsIm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="16dp"
                    android:padding="8dp"
                    android:src="@drawable/ic_observacao" />

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/inputLayoutObservacao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="24dp">

                    <EditText
                        android:id="@+id/medicoObs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:hint="Observação"
                        android:inputType="textMultiLine"
                        android:maxLength="200" />

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>
