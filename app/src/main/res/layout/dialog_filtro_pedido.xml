<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvSelecionarMed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecionar remédio"
        android:textSize="16sp"
        android:textColor="@color/preto"/>

    <Spinner
        android:id="@+id/spinnerFiltro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSelecionarMed"
        android:layout_marginTop="15dp"></Spinner>

    <TextView
        android:id="@+id/tvSelecionarPeriodo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinnerFiltro"
        android:layout_marginTop="25dp"
        android:text="Selecione o período"
        android:textSize="16sp"

        android:textColor="@color/preto"/>

    <TextView
        android:id="@+id/tvDataInicial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvSelecionarPeriodo"
        android:layout_marginTop="20dp"
        android:text="Data Inicial"
        android:textSize="16sp"

        android:textColor="@color/preto"/>

    <TextView
        android:id="@+id/tvDataFinalPeriodo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tvDataInicial"
        android:layout_marginLeft="78dp"
        android:layout_toRightOf="@id/tvDataInicial"
        android:text="Data Final"
        android:textSize="16sp"

        android:textColor="@color/preto"/>

    <TextView
        android:id="@+id/dInicial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDataInicial"
        android:layout_marginTop="12dp"
        android:text="01/01/2018"
        android:textSize="16sp"
        android:textColor="@color/colorPrimary"/>
    <TextView
        android:id="@+id/dFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/dInicial"
        android:layout_alignTop="@id/dInicial"
        android:layout_marginLeft="65dp"
        android:text="01/01/2018"
        android:textSize="16sp"
        android:textColor="@color/colorPrimary"/>

    <RelativeLayout
        android:layout_below="@+id/dFinal"
        android:layout_marginTop="45dp"
        android:layout_marginRight="8dp"
        android:layout_width="wrap_content"
        android:layout_height="36dp">

        <Button
            android:id="@+id/btnDiaEspDef"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:text="Definir"
            android:textColor="@color/colorAccent"/>
        <Button
            android:id="@+id/btnDiaEspCancel"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_toLeftOf="@+id/btnDiaEspDef"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:text="Cancelar"
            android:textColor="@color/colorAccent"/>
    </RelativeLayout>
</RelativeLayout>