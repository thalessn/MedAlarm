<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.FarmaciaProxima">
    

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tbFarmacia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            app:theme="@style/ThemeOverlay.AppCompat.Dark"/>
        
        <fragment
            android:layout_below="@id/tbFarmacia"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".activity.FarmaciaProxima" />
    </RelativeLayout>
    
    
    <RelativeLayout
        android:id="@+id/rlBottomSheet"
        android:layout_width="match_parent"
        app:behavior_hideable="true"
        android:padding="8dp"
        android:background="@color/white"
        app:layout_behavior="@string/bottom_sheet_behavior"
        android:layout_height="125dp">

        <TextView
            android:id="@+id/tvNomeFarma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FarmÃ¡cia Do Sena Campos"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:padding="8dp"/>

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:numStars="5"
            android:theme="@style/RatingBar"
            android:rating="4.5"
            android:padding="8dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvNomeFarma"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:stepSize="0.2" />
        <Button
            android:id="@+id/btnRotas"
            android:layout_below="@id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rotas"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="#4263cf"/>

    </RelativeLayout>





</android.support.design.widget.CoordinatorLayout>
