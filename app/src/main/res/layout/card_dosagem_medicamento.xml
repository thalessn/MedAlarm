<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="140dp"
    android:layout_below="@+id/button"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="6dp"
    app:elevation="3dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <RelativeLayout
            android:id="@+id/rlMed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textoTeste"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dosagem"
                android:textColor="@color/colorAccent"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/cardSetaDosagem"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_seta_cardview" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlCardDosagem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlMed"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edDosagem"
                android:layout_width="70dp"
                android:textAlignment="center"
                android:layout_height="50dp"
                android:maxLines="1"
                android:inputType="number"
                android:maxLength="5" />


            <Spinner
                android:id="@+id/dosSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/edDosagem"
                android:layout_toEndOf="@+id/edDosagem">

            </Spinner>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>