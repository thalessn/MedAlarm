<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gmail.thales_silva_nascimento.alarmmed.activity.Sobre">

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tbSobre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.Dark" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgSobre"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:src="@drawable/icone23_740" />

    <TextView
        android:layout_marginTop="30dp"
        android:id="@+id/tvNomeSobre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgSobre"
        android:layout_centerInParent="true"
        android:text="Med Alarm"
        android:textStyle="bold"
        android:textSize="30sp"/>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/tvAnoSobre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvNomeSobre"
        android:layout_centerInParent="true"
        android:textSize="30sp"
        android:text="2018"
        android:textStyle="bold"/>

</RelativeLayout>
