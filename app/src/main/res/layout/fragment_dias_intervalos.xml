<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:text="Ajuste o intervalo de dias"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnMenosInter"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="-"
            android:textColor="@color/colorAccent"
            android:textScaleX="2"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tDiasCountInter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnMaisInter"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="+"
            android:textColor="@color/colorAccent"
            android:textSize="21sp"
            android:textStyle="bold" />

    </LinearLayout>


    <TextView
        android:padding="24dp"
        android:id="@+id/tDiasInter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#000000" />

    <RelativeLayout
        android:layout_marginRight="8dp"
        android:layout_width="wrap_content"
        android:layout_height="52dp">

        <Button
            android:id="@+id/btnDiaInterCancel"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_toLeftOf="@+id/btnDiaInterDef"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:text="Cancelar"
            android:textColor="@color/colorAccent"/>

        <Button
            android:id="@+id/btnDiaInterDef"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:text="Definir"
            android:textColor="@color/colorAccent"/>
    </RelativeLayout>

</LinearLayout>