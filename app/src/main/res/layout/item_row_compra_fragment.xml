<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlCOmpraRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_marginBottom="5dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imCompraMed"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/remedio1"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/imCompraMed"
        android:layout_toEndOf="@id/imCompraMed">
        <TextView
            android:id="@+id/nCompraMed"
            android:text="Thales Nascimento"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:id="@+id/qtdEstCompra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nCompraMed"
            android:text="Qtd. Estoque: 100"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/qtdAlertaCompra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nCompraMed"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:text="Qtd. Alerta: 120"
            android:textStyle="bold"/>
    </RelativeLayout>


</RelativeLayout>